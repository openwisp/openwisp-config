# For more information about these config options please see the README
# or https://github.com/openwisp/openwisp-config#configuration-options

config controller 'http'
	option url ''
	option interval '120'
	option verify_ssl '1'
	option uuid ''
	option key ''
	option shared_secret ''
	option test_config '1'
	#option test_script '/usr/sbin/mytest'
	list unmanaged 'system.ntp'
	list unmanaged 'system.@led'
	list unmanaged 'network.loopback'
	list unmanaged 'network.globals'
	list unmanaged 'network.lan'
	list unmanaged 'network.wan'
	list unmanaged 'network.@switch'
	list unmanaged 'network.@switch_vlan'
	# curl options
	#option connect_timeout '15'
	#option max_time '30'
	#option capath '/etc/ssl/certs'
